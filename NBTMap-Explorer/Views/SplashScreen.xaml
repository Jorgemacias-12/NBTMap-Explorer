<Window x:Class="NBTMap_Explorer.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NBTMap_Explorer.Views"
        mc:Ignorable="d"
        Title="NBTMap Explorer - Cargando..."
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Width="1280"
        Height="720"
        ResizeMode="NoResize"
        FontFamily="Monocraft"
>
    <Window.Background>
        <ImageBrush ImageSource="/Assets/Images/splash_screen_pattern_light.png" TileMode="Tile" ViewportUnits="Absolute" Viewport="0, 0, 64, 64"/>
    </Window.Background>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <Button Click="Close_Click" Foreground="White" Grid.Column="1" Content="" Style="{StaticResource CloseButton}" ToolTip="Cerrar" />
        </Grid>

        <Border Background="White" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" CornerRadius="15" Padding="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10">
                <Image Source="/Assets/Icons/app-icon.png"
               Width="80" Height="80" Margin="0,0,0,10"/>

                <TextBlock TextAlignment="Center" Text="NBTMap Explorer" FontSize="28" FontWeight="Bold" Margin="0,5"/>
                <TextBlock TextAlignment="Center" Text="Versión 0.0.1" FontSize="12" Foreground="Gray" Margin="0,2"/>

                <ProgressBar
                     Style="{StaticResource RoundedProgressBar}"
                     Value="0"
                     Width="300"
                     Height="10"
                     Foreground="#2ECC71"
                     Margin="0,15,0,10" />

                <TextBlock TextAlignment="Center" Text="© 2025 NBTMap Explorer" FontSize="10" Foreground="Gray" Margin="0,20,0,2"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>